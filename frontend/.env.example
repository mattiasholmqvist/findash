# FinDash Frontend Environment Variables
# Copy this file to .env.local and update the values

# Application Info
VITE_APP_NAME=FinDash
VITE_APP_VERSION=0.1.0
VITE_APP_DESCRIPTION="Modernt bokföringssystem för svenska företag"

# Environment
VITE_NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_SESSION_DURATION=28800
VITE_AUTH_AUTO_LOGIN=true
VITE_AUTH_DEFAULT_USER=demo.user

# Mock Data Configuration
VITE_MOCK_DATA_ENABLED=true
VITE_MOCK_DATA_SIZE=1000
VITE_MOCK_DATA_SEED=42
VITE_MOCK_ERROR_RATE=0.02

# Feature Flags
VITE_FEATURE_VAT_ENABLED=true
VITE_FEATURE_EXPORT_ENABLED=false
VITE_FEATURE_REPORTS_ENABLED=false
VITE_FEATURE_ACCOUNT_HIERARCHY=true

# Localization
VITE_DEFAULT_LOCALE=sv-SE
VITE_DEFAULT_CURRENCY=SEK
VITE_DEFAULT_DATE_FORMAT=YYYY-MM-DD

# Performance
VITE_PAGINATION_DEFAULT_SIZE=50
VITE_PAGINATION_MAX_SIZE=100
VITE_QUERY_STALE_TIME=300000
VITE_QUERY_CACHE_TIME=600000

# Development Tools
VITE_DEVTOOLS_ENABLED=true
VITE_PERFORMANCE_MONITORING=true

# External Services (for future use)
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=
VITE_SUPPORT_EMAIL=support@findash.se

# PWA Configuration
VITE_PWA_ENABLED=false
VITE_PWA_OFFLINE_ENABLED=false

# Security
VITE_CSP_ENABLED=true
VITE_HTTPS_ONLY=false